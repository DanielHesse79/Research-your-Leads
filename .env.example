# Database Configuration
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=forskardatabas
DB_USER=postgres
DB_PASSWORD=your_password
DB_SCHEMA=public

# Elasticsearch Configuration
ES_HOST=localhost:9200
ES_INDEX_PREFIX=forskare
ES_USERNAME=elastic
ES_PASSWORD=your_password

# Authentication Configuration
AUTH_TYPE=saml  # or 'oidc' or 'local'
SAML_ENTITY_ID=https://your-domain/metadata
SAML_METADATA_URL=https://your-idp/metadata
SAML_ACS_URL=https://your-domain/saml/acs
SAML_CERT_FILE=path/to/cert.pem
SAML_KEY_FILE=path/to/key.pem

# OIDC Configuration (if using OIDC)
OIDC_CLIENT_ID=your_client_id
OIDC_CLIENT_SECRET=your_client_secret
OIDC_DISCOVERY_URL=https://your-idp/.well-known/openid-configuration
OIDC_REDIRECT_URI=https://your-domain/oidc/callback

# Email Notification Configuration
EMAIL_NOTIFICATIONS=true
SMTP_HOST=smtp.your-domain.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
FROM_EMAIL=noreply@your-domain.com

# Slack Notification Configuration
SLACK_NOTIFICATIONS=true
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
SLACK_CHANNEL=#forskare-updates

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your_secret_key 